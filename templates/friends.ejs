<style>
  .link-title span.fake-title {
    padding-left: 10px;
    border-left: 3px solid #3273dc;
  }

  .links {
    margin-bottom: 2rem;
  }

  .links ul {
    margin: 0;
    list-style: none;
    padding: 0;
    width: 100%;
    display: inline-block
  }

  .links ul li {
    width: 48%;
    float: left;
    border: 1px solid rgba(197, 102, 102, 0.1);
    padding: 8px 18px;
    margin: 4px 4px;
    position: relative;
    overflow: hidden;
    -webkit-transition: all .3s;
    transition: all .3s;
    border-radius: 10px
  }

  .links ul li img {
    float: right;
    box-shadow: inset 0 0 10px #000;
    padding: 5px;
    opacity: 1;
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    -ms-transform: rotate(0deg);
    transition: all ease 1s;
    -webkit-transition: all ease 1s;
    -moz-transition: all ease 1s;
    -o-transition: all ease 1s;
    margin-top: 5px;
    width: 65px;
    height: 65px;
    padding: 2px;
    border-radius: 100%
  }

  .links ul li:hover img {
    transform: rotate(360deg);
    -webkit-transform: rotate(360deg);
    -moz-transform: rotate(360deg);
    -o-transform: rotate(360deg);
    -ms-transform: rotate(360deg)
  }

  span.sitename {
    color: #33aaff;
    font-weight: bold;
    padding-bottom: 10px;
    display: block;
    -webkit-transition: all .3s;
    transition: all .3s;
    overflow: hidden;
    text-overflow: ellipsis;
    -o-text-overflow: ellipsis;
    white-space: nowrap
  }

  .linkdes {
    color: #949494;
    font-weight: bold;
    font-size: 14px;
    padding: 10px 0;
    border-top: 1px dashed #ddd;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    line-height: 25px;
    -webkit-transition: all .5s;
    transition: all .5s
  }

  .link-title {
    font-weight: 400;
    color: #6d6d6d;
    padding-left: 0;
    border-left: 0;
    margin: 50px 0 20px
  }

  .links ul li:before {
    content: "";
    background-color: #3273dc;
    -webkit-transform: skew(45deg, 0);
    transform: skew(45deg, 0);
    width: 0;
    height: 100%;
    position: absolute;
    top: 0;
    left: -60px;
    z-index: -1;
    -webkit-transition: all .5s;
    transition: all .5s
  }

  .links ul li:hover {
    color: #27323a;
    border: 1px solid #3273dc
  }

  .links ul li:hover:before {
    width: 180%
  }

  .links ul li:hover .linkdes {
    border-top: 1px dashed #fff
  }

  span.linkss-title {
    font-size: 25px;
    text-align: center;
    display: block;
    margin: 50px 0 30px;
    letter-spacing: 5px
  }

  .pattern-center h1.cat-title,
  .pattern-center h1.entry-title {
    color: #5895f7;
    font-size: 30px;
    font-weight: 500;
    width: 80%;
    margin: auto;
    padding: 0;
    border: 0
  }

  .link-description {
    margin-left: 0.5rem;
  }

  @media(max-width: 630px) {
    .links ul li {
      width: 100% !important
    }
  }
</style>
<div id="content" class="site-content">
  <% if(friends.description) { %>
  <p style="margin-bottom: -2em;"><%= friends.description %></p>
  <% } %>
  <article class="post-item post-301 page type-page status-publish has-post-thumbnail hentry">
    <% if (friends.enable) { %>
    <div class="links">
      <% (friends.data || []).forEach(function (group, index) { %>
      <h3 class="link-title"><span class="fake-title"><%- group.group %></span></h3>
      <% if (group.description) { %>
      <div class="link-description"><%- group.description %></div>
      <% } %>
      <ul class="link-items fontSmooth">
        <% (group.items || []).forEach(function (item) { %>
        <li class="link-item">
          <a class="link-item-inner effect-apollo" href="<%- item.url %>" title="<%- item.description %>"
            target="_blank" rel="friend">
            <img class="lazyload" data-src="<%- item.img %>" src="<%- item.img %>" />
            <span class="sitename">
              <%- item.name %></span>
            <div class="linkdes">
              <%- item.description %></div>
          </a>
        </li>
        <% }) %>
      </ul>
      <% }) %>
    </div>
    <% } %>
  </article>
